<?xml version="1.0" encoding="utf-8"?>
<extension version="2.5" type="plugin" group="system">
	<name>plg_system_joomlaapps</name>
	<author>Efthimios Mavrogeorgiadis</author>
	<creationDate>5 September 2013</creationDate>
	<copyright>Copyright (C) 2013 Efthimios Mavrogeorgiadis. All rights reserved.</copyright>
	<license>GNU General Public License version 2 or later; see LICENSE.txt</license>
	<authorEmail>admin@iota.gr</authorEmail>
	<authorUrl>www.iota.gr</authorUrl>
	<version>1.0.0</version>
	<description>Support for JoomlaApps download after registration functionality</description>
	<files>
		<filename plugin="joomlaapps">joomlaapps.php</filename>
		<filename>index.html</filename>
	</files>
	<languages>
		<language tag="en-GB">en-GB.plg_system_joomlaapps.ini</language>
		<language tag="en-GB">en-GB.plg_system_joomlaapps.sys.ini</language>
	</languages>
	<config>
		<fields name="params">
			<fieldset name="basic">
				<field name="files" type="textarea"
					cols="100"
					description="PLG_JOOMLAAPPS_FILES_DESC"
					label="PLG_JOOMLAAPPS_FILES_LABEL"
					rows="15"
				/>
				<field name="entry" type="url"
					description="PLG_JOOMLAAPPS_ENTRY_DESC"
					label="PLG_JOOMLAAPPS_ENTRY_LABEL"
					size="60"
				/>
			</fieldset>
		</fields>
	</config>
</extension>
